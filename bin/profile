#!/bin/bash

tmp_aliases=$(mktemp -t XXXXXX)

for pth_config in config/*; do
	[[ -f $pth_config ]] || continue
	source $pth_config

	pth_vagrant=$(pwd)/vagrant/$vagrantname
	[[ -d $pth_vagrant ]] || continue

  cat >> $tmp_aliases << EOF
  function ${pth_config##*/} {
    pushd $(pwd) > /dev/null
    bin/vagrant $vagrant_name ssh "\$@"
    popd > /dev/null
  }
EOF
done
unset pth_vagrant

source $tmp_aliases
rm -f $tmp_aliases

