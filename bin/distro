#!/bin/bash

#/ NAME
#/     distro -- build and export a vagrant basebox
#/
#/ SYNOPSIS
#/     distro [veewee]

# figure out the project root under which bin, lib live
shome="$(cd -P -- "$(dirname -- "$0")/.." && pwd -P)"

# load a meat library
source "$shome/bin/_prime" "$@"
require 'profile'
require 'bundler'

# entry point
function main {
  if [[ "$#" < 1 ]]; then
    logger_fatal "missing veewee definition"
    exit 1
  fi

  local nm_veewee=$1; shift
  local ver_veewee="$(cat $shome/definitions/$nm_veewee/VERSION)"

  bundle exec vagrant basebox build $nm_veewee -f
  bundle exec vagrant basebox export $nm_veewee
  mv $nm_veewee.box $shome/boxes/archive/${nm_veewee}-${ver_veewee}_.box
  VBoxManage unregistervm ${nm_veewee} --delete || true

  bundle exec vagrant box remove ${nm_veewee}_ || true
  bundle exec vagrant box remove ${nm_veewee} || true
  bundle exec vagrant box add ${nm_veewee}_ $shome/boxes/archive/${nm_veewee}-${ver_veewee}_.box

  $shome/bin/distro2 "$nm_veewee"
}

# define command line options:
#   var name, default, description, short option

# parse the command-line
parse_command_line "$@" || exit $?
eval set -- "${FLAGS_ARGV}"

# pass arguments to entry point
main "$@"
