#!/bin/bash

#/ NAME
#/     basebox - creates a basebox from a distro
#/
#/ SYNOPSIS
#/     basebox [distro] [basebox]

# figure out the project root under which bin, lib live
shome="$(cd -P -- "$(dirname -- "$0")/.." && pwd -P)"

# load a meat library
source "$shome/bin/_prime" "$@"
require 'profile'
require 'bundler'

# entry point
function main {
  if [[ "$#" < 1 ]]; then
    logger_fatal "missing distro"
    exit 1
  fi

  if [[ "$#" < 2 ]]; then
    logger_fatal "missing basebox"
    exit 1
  fi

  local nm_distro=$1; shift
  local nm_basebox=$1; shift

  $shome/bin/instance $nm_distro $nm_basebox
  $shome/bin/package --destroy $nm_basebox

}

# define command line options:
#   var name, default, description, short option

# parse the command-line
parse_command_line "$@" || exit $?
eval set -- "${FLAGS_ARGV}"

# pass arguments to entry point
main "$@"
