#!/bin/bash

#/ NAME
#/     box -- builds and boxes a vagrant
#/
#/ SYNOPSIS
#/     box [veewee] [basebox]

# figure out the project root under which bin, lib live
shome="$(cd -P -- "$(dirname -- "$0")/.." && pwd -P)"

# load a meat library
source "$shome/bin/_prime" "$@"
require 'profile'
require 'bundler'

# entry point
function main {
  if [[ "$#" < 1 ]]; then
    logger_fatal "missing vagrant"
    exit 1
  fi

  if [[ "$#" < 2 ]]; then
    logger_fatal "missing veewee definition"
    exit 1
  fi

  local nm_veewee=$1; shift
  local nm_basebox=$1; shift

  bundle_macports

  $shome/bin/instance "$nm_basebox" "$nm_veewee"
  $shome/bin/package "$nm_basebox"
  bin/vagrant -- "$nm_basebox" destroy -f
}

# define command line options:
#   var name, default, description, short option
DEFINE_string 'ip' '' 'ip addresses'

# parse the command-line
parse_command_line "$@" || exit $?
eval set -- "${FLAGS_ARGV}"

# pass arguments to entry point
main "$@"
