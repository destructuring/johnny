#!/bin/bash -fue

[[ -d .git ]] || {
  echo "ERROR: must be in the root directory of git project" 1>&2
  exit 1
}

source bin/profile

bundle --local --path vendor/bundle
if [[ -d zendesk_ops ]]; then
  git clone git@github.com:zendesk/zendesk_ops
  pushd zendesk_ops 1>&-
  bundle --local --path vendor/bundle
  popd 1>&-
end

bin/destroy-support || true
bin/build-install-iso support-base
bin/build-virtualbox support-base -f -n
bin/support up
support bash postinstall.sh vagrant
bin/new-node support 192.168.56.104 development development dev 192.168.56.104
bin/bootstrap-vagrant support 192.168.56.104 development development dev 192.168.56.104
