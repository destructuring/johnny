#!/bin/bash

function bundle_macports {
  if [[ -n "${MACPORTS:-}" ]]; then
    bundle config build.nokogiri \
      --with-xml2-include=$MACPORTS/include/libxml2 --with-xml2-lib=$MACPORTS/lib --with-xslt-dir=$MACPORTS
  fi
  
  (cd $shome && bundle check > /dev/null || bundle --local --path vendor/bundle)
}

bundle_macports
