#!/bin/bash -e

nm_instance=$1; shift
bin/bundler

figlet "vbox"
ver_virtualbox=$(bin/vagrant ssh $nm_instance cat .vbox_version)
pth_guestadditions="iso/VBoxGuestAdditions_$ver_virtualbox.iso"
url_guestadditions="http://download.virtualbox.org/virtualbox/$ver_virtualbox/VBoxGuestAdditions_$ver_virtualbox.iso"

if [[ ! -f $pth_guestadditions ]]; then
  wget -O $pth_guestadditions $url_guestadditions
fi

bin/vagrant scp $nm_instance $pth_guestadditions $nm_instance:
bin/vagrant ssh $nm_instance mount -o loop /root/$(basename $pth_guestadditions) /mnt # get rid of root home dir hardcode
bin/vagrant ssh $nm_instance sh /mnt/VBoxLinuxAdditions.run
bin/vagrant ssh $nm_instance umount /mnt

bin/vagrant $nm_instance reload || { sleep 30; bin/vagrant $nm_instance reload; }

